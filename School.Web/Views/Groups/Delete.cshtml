@model School.Application.Models.GroupModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>


@if (Model.Students != null)
{
    if (Model.Students.Count > 0)
    {
        <h3>Due to the presence of students, you cannot delete this</h3>
    }
    else
    {
        <h3>Are you sure you want to delete this?</h3>
    }
}

<div>
    <h4>Group</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Curator)
        </dt>
        @if (Model.Curator != null)
        {
            <dd class="col-sm-10">
                @(Model.Curator.FirstName + " " + Model.Curator.LastName)
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                None
            </dd>
        }
    </dl>

    @if (Model.Students.Count == 0)
    {
        <form method="post">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    }
    else
    {
        <a class="btn"
           asp-controller="Students" asp-action="Index"
           asp-route-parentId="@Model.Id">
            <input type="submit" value="Students" class="btn btn-secondary" />
        </a>
        <a>|</a>
        <a asp-action="Index">Back to List</a>
    }
</div>
