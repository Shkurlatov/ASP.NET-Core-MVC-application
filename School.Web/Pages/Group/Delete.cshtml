@page
@model School.Web.Pages.Group.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

@if (Model.Group.Students != null)
{
    if (Model.Group.Students.Count > 0)
    {
        <h3>Due to the presence of students, you cannot delete this</h3>
    }
    else
    {
        <h3>Are you sure you want to delete this?</h3>
    }
}

<div>
    <h4>Group</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Group.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Group.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Group.Course)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Group.Course.Name)
        </dd>
    </dl>

    @if (Model.Group.Students.Count == 0)
    {
        <form method="post">
            <input type="hidden" asp-for="Group.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="./Index">Back to List</a>
        </form>
    }
    else
    {
        <a class="btn"
           asp-page="/Student/Index"
           asp-route-parentId="@Model.Group.Id">
            <input type="submit" value="Students" class="btn btn-secondary" /> |
            <a asp-page="./Index">Back to List</a>
        </a>
    }
</div>
